{
  "name": "angular-weather-widget",
  "version": "1.2.4",
  "description": "Weather Widget based on Open Weather Map Api",
  "main": "./bundles/angular-weather-widget.umd.js",
  "module": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "start": "concurrently --raw \"webpack-dev-server --open\" \"npm run test:watch\"",
    "build:demo": "webpack -p",
    "build:umd": "webpack --config webpack.config.umd.ts",
    "build:ngc": "ngc -p tsconfig-ngc.json",
    "build:dist": "npm run build:umd && npm run build:ngc",
    "build:clean": "del-cli dist",
    "test": "karma start --single-run && npm run build:dist && npm run build:clean",
    "test:watch": "karma start --auto-watch",
    "commit": "git-cz",
    "compodoc": "compodoc -p tsconfig-compodoc.json -d docs --disableGraph --disableCoverage --disablePrivateOrInternalSupport",
    "gh-pages": "git checkout gh-pages && git merge master --no-edit --no-ff && npm run build:demo && npm run compodoc && git add . && git commit -m \"chore: build demo and docs\" && git push && git checkout master",
    "copyfiles": "copyfiles package.json LICENSE README.md CHANGELOG.md dist && node tools/package-json-cleanup.js",
    "link": "npm run build:dist && npm run copyfiles && cd dist && npm link && cd ..",
    "prerelease": "npm test",
    "release:git": "standard-version && git add package.json && git commit -m \"chore: bump version number\" && git push --follow-tags origin master",
    "release:npm": "npm run build:dist && npm run copyfiles && npm publish dist",
    "release": "npm run release:git && npm run release:npm",
    "postrelease": "npm run build:clean && npm run gh-pages",
    "commitmsg": "validate-commit-msg",
    "codecov": "cat coverage/lcov.info | codecov",
    "prettier": "prettier --single-quote --parser typescript --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{demo,src,test}/**/*.ts": [
      "npm run prettier",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krzysztofsaja/angular-weather-widget.git"
  },
  "keywords": [
    "angular2",
    "angular"
  ],
  "author": "Krzysztof Saja",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krzysztofsaja/angular-weather-widget/issues"
  },
  "homepage": "https://github.com/krzysztofsaja/angular-weather-widget#readme",
  "devDependencies": {
    "@angular/animations": "^6.0.3",
    "@angular/common": "^6.0.3",
    "@angular/compiler": "^6.0.3",
    "@angular/compiler-cli": "^6.0.3",
    "@angular/core": "^6.0.3",
    "@angular/forms": "^6.0.3",
    "@angular/http": "^6.0.3",
    "@angular/language-service": "^6.0.3",
    "@angular/platform-browser": "^6.0.3",
    "@angular/platform-browser-dynamic": "^6.0.3",
    "@angular/router": "^6.0.3",
    "@compodoc/compodoc": "^1.0.0-beta.3",
    "@types/chai": "^4.0.0",
    "@types/chart.js": "^2.6.1",
    "@types/html-webpack-plugin": "^2.11.2",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.2",
    "@types/sinon": "^5.0.0",
    "@types/sinon-chai": "^2.7.26",
    "@types/webpack": "^4.4.0",
    "chai": "^4.0.0",
    "chart.js": "^2.6.0",
    "codecov": "^3.0.2",
    "codelyzer": "^4.3.0",
    "commitizen": "^2.8.1",
    "concurrently": "^3.0.0",
    "copyfiles": "^2.0.0",
    "core-js": "^2.4.1",
    "cz-conventional-changelog": "^2.0.0",
    "del-cli": "^1.0.0",
    "fork-ts-checker-webpack-plugin": "^0.4.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.0-rc.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage-istanbul-reporter": "^2.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.0",
    "lint-staged": "^7.1.2",
    "loglevel": "^1.4.1",
    "mocha": "^5.2.0",
    "prettier": "^1.5.3",
    "prettier-loader": "^2.1.0",
    "rxjs": "^6.2.0",
    "sinon": "^5.0.10",
    "sinon-chai": "^3.1.0",
    "standard-version": "^4.0.0",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.5",
    "tslint": "~5.10.0",
    "tslint-config-mwl": "^0.4.1",
    "tslint-loader": "^3.5.3",
    "typescript": "2.7.2",
    "validate-commit-msg": "^2.8.0",
    "weather-icons": "^1.3.2",
    "webpack": "^4.8.3",
    "webpack-angular-externals": "^1.0.0",
    "webpack-cli": "^2.1.4",
    "webpack-dev-server": "^3.1.4",
    "webpack-rxjs-externals": "^2.0.0",
    "zone.js": "^0.8.4"
  },
  "peerDependencies": {
    "@angular/core": ">=4.0.0 <5.0.0",
    "@angular/http": ">=4.0.0 <5.0.0",
    "@angular/router": ">=4.0.0 <5.0.0",
    "chart.js": "^2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@angular/cli": "^6.0.5",
    "rxjs-compat": "^6.2.0"
  }
}
